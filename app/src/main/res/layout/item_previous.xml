<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="5dp">

    <ImageView
        android:id="@+id/iv_previous_chase"
        android:layout_width="150dp"
        android:layout_height="180dp" />

    <TextView
        android:id="@+id/tv_num_previous_chase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_previous_chase"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:text="13万人追踪"
        android:textSize="10sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_desc_previous_chase"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_num_previous_chase"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="送你一份超大胖次"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_desc_previous_chase"
        android:layout_marginTop="5dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_updata_previous_chase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="更新至第45话"
            android:textSize="14sp" />


    </RelativeLayout>


</RelativeLayout>