<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_picture_chase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView

                android:id="@+id/iv_fanju_chase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_fanjuimage_chase"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bangumi_home_index_jp_bg" />

            <ImageView
                android:id="@+id/iv_fanjuimage_chase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_fanju_chase"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bangumi_home_index_jp_ic" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_guoman_chase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_guomanimage_chase"
                android:layout_centerInParent="true"
                android:background="@drawable/bangumi_home_index_cn_bg" />

            <ImageView
                android:id="@+id/iv_guomanimage_chase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_guoman_chase"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bangumi_home_index_cn_ic" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ll_picture_chase"
        android:id="@+id/ll_guide_chase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView

                android:id="@+id/iv_timer_chase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_timer_chase"
                android:background="@drawable/bangumi_follow_ic_timeline" />

            <TextView
                android:id="@+id/tv_timer_chase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="时间表" />
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_index_chase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_index_chase"
                android:background="@drawable/bangumi_follow_ic_index" />

            <TextView
                android:id="@+id/tv_index_chase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="索引" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ll_guide_chase"
        android:id="@+id/ll_line_chase"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="vertical"
        android:background="@color/gray_light_30"></LinearLayout>

    <ImageView
        android:layout_below="@+id/ll_line_chase"
        android:id="@+id/iv_guide_chase"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/bangumi_home_follow_bangumi_guide" />

</RelativeLayout>